from heuristica.construccion.nearest_neighbor import *

route = nearest_neighbor()



done = False
while not done:
    
    i = 1
    change = False
    while (i <= N - 1) and not change:
        j = i + 1
        while (j <= N) and not change:
            swap(route, i, j)
            if ((is_route_possible(route)) and (calculate_distance(route) < distance)):
                change = True
            else:
                swap(route, i, j)
            j += 1
        
        i += 1
    
    if(i=N):
        done = True